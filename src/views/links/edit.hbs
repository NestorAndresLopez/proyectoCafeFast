<div class="col-md-6 mx-auto">
    <div class="car">
        <div class="card-header">
            <h2>Edit Note</h3>
        </div>
        <div class="card-body">
            <form action="/links/edit/{{link.id}}" method="POST">

                <div class="form-group">
                    <input type="text" value="{{link.title}}" name="title" class="form-control" placeholder="Title" autofocus>
                </div>

                <div class="form-group">
                    <textarea name="description" class="form-control" placeholder="Descripcion">{{link.description}}</textarea>
                </div>

                <div class="form-group d-grid gap-2">
                        <button class="btn-block btn btn-primary " type="submit">
                            Save
                        </button>
                    
                </div>
            </form>
        </div>
    </div>
</div>